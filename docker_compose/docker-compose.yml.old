version: "3.3"
services:

  portainer:
    image: portainer/portainer:1.22.1
    container_name: portainer
    ports:
      - 9000:9000
      - 8000:8000
    volumes:
      - /var/run/docker.sock:/var/run/docker.sock
      - portainer_data:/data
    restart: unless-stopped

  samba:
    image: dperson/samba
    container_name: samba
    ports:
      - 139:139
      - 445:445
    volumes:
      - ${HOST_SMB_MOUNT}:${GUEST_SMB_MOUNT}
    command: -p -u ${SMB_USR};${SMB_PASS} -s ${SMB_NAME};${GUEST_SMB_MOUNT};yes;no;no;${SMB_USR}
    restart: unless-stopped

  prometheus:
    image: prom/prometheus:v2.13.1
    container_name: prometheus
    ports:
      - 9090:9090
    environment:
      - TZ=${TZ}
    volumes:
      - ${PROM_CONF_DIR}/prometheus.yml:/etc/prometheus/prometheus.yml
    restart: unless-stopped

  grafana:
    image: grafana/grafana:6.4.3
    container_name: grafana
    ports:
      - 3000:3000
    environment:
      - TZ=${TZ}
      - GF_SECURITY_ADMIN_PASSWORD=${GRAFANA_PASS}
    volumes:
      - grafana-storage:/var/lib/grafana
    restart: unless-stopped

  # dont forget to setup watchdir handling
  transmission:
    image: dperson/transmission
    container_name: transmission
    ports:
      - 9091:9091
      - 51413:51413
      - 51413:51413/udp
    environment:
      - TZ=${TZ}
      - TRUSER=${TR_USER}
      - TRPASSWD=${TR_PASS}
    volumes:
      - ${TR_CONF_DIR}:/var/lib/transmission-daemon/info
      - ${HOST_SMB_MOUNT}/torrent-files:/var/lib/transmission-daemon/info/watch-dir
      - ${HOST_SMB_MOUNT}/torrent-complete:/var/lib/transmission-daemon/downloads
      - ${HOST_SMB_MOUNT}/torrent-inprogress:/var/lib/transmission-daemon/incomplete
    restart: unless-stopped

volumes:
  portainer_data:
  grafana-storage:
  